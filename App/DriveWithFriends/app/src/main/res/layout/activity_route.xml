<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="trio.drivewithfriends.RouteActivity">

    <TextView android:text="@string/username" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/username"
        android:textSize="40dp"
        android:textIsSelectable="true" />

    <TextView android:text="location1" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/locationOne"
        android:layout_alignParentBottom="true"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="true"  />

    <TextView android:text="location2" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/locationTwo"
        android:textSize="15dp"
        android:textIsSelectable="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/locationOne"/>

    <TextView android:text="location3" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/locationThree"
        android:textSize="15dp"
        android:textIsSelectable="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/locationTwo"/>


</RelativeLayout>
