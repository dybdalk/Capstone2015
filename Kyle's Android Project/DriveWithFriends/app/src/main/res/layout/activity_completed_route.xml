<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kyle.drivewithfriends.CompletedRoute"
    android:background="@color/white">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/distancedriven"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="34 miles"
        android:id="@+id/milesDrivenText"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:id="@+id/fromText"
        android:textSize="40dp"
        android:layout_below="@+id/milesDrivenText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tacoma, WA"
        android:id="@+id/srcCityText"
        android:layout_below="@+id/fromText"
        android:layout_centerHorizontal="true"
        android:textSize="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        android:id="@+id/toText"
        android:layout_below="@+id/srcCityText"
        android:layout_centerHorizontal="true"
        android:textSize="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Seattle, WA"
        android:id="@+id/destCityText"
        android:layout_below="@+id/toText"
        android:layout_centerHorizontal="true"
        android:textSize="45dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="View Route"
        android:id="@+id/button"
        android:background="@color/white"
        android:textColor="@color/cyan"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/toText"
        android:layout_toStartOf="@+id/toText"
        android:layout_marginBottom="41dp" />

    <Button
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:text="Match Route"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_toRightOf="@+id/toText"
        android:layout_toEndOf="@+id/toText"
        android:textColor="@color/white"
        android:background="@color/cyan"
        android:onClick="startMatchedRoutes" />
</RelativeLayout>
