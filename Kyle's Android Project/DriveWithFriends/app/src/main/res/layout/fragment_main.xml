<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:padding="0dp"
    android:background="@color/white">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Route"
        android:textAllCaps="false"
        android:id="@+id/trackRouteButton"
        android:layout_marginBottom="73dp"
        android:background="@color/cyan"
        android:textColor="@color/white"
        android:minWidth="250dp"
        android:minHeight="60dp"
        android:textSize="25dp"
        android:onClick="beginTracking"
    android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/imageView"
        android:minHeight="100dp"
        android:minWidth="100dp"
        android:src="@drawable/trackroute"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/trackRouteButton"
        android:layout_alignStart="@+id/trackRouteButton"
        android:layout_marginTop="97dp" />
</RelativeLayout>
